<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>User Name</th>
    <th>Email</th>
    <th>SIS ID</th>
    <th>Canvas ID</th>
    <th>Enrollments</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.sis_id %></td>
      <td><%= user.canvas_id ? link_to("#{user.canvas_id} â§‰", "#{canvas_path}/users/#{user.canvas_id}") : '' %></td>
      <td><%= user.enrollments.size %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

