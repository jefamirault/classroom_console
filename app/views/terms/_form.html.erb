<%= form_with(model: term, local: true) do |form| %>
  <% if term.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(term.errors.count, "error") %> prohibited this term from being saved:</h2>

      <ul>
        <% term.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :canvas_id, 'Canvas ID' %>
    <%= form.number_field :canvas_id %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.datetime_select :start %>
  </div>

  <div class="field">
    <%= form.label :end %>
    <%= form.datetime_select :end %>
  </div>

  <%= form.label :school_year_id, "School Year" %>
  <%= form.collection_select :school_year_id, SchoolYear.all, :id, :name, { prompt: "Select a school year" } %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
