<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Semesters</th>
      <th>SIS ID</th>
      <th>Sections</th>
      <th>Enrollments</th>
<!--      <th>Sync Course?</th>-->
      <th>Sync?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course %></td>
        <td><%= course.course_length %></td>
        <td><%= course.sis_id %></td>
        <td><%= course.sections.count %></td>
        <td><%= course.enrollments.size %></td>
        <td><%= course.sync_course %></td>
<!--        <td><%#= course.sync_grades %></td>-->
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="links">
  <%= link_to 'New Course', new_course_path %>

  <br>
  <br>

  <%= link_to 'Sync SIS Enrollments', sync_all_sis_enrollments_path, class: 'slow', data: { toggle: 'tooltip'}, title: 'For all courses where sync=true, look up OnCampus enrollments for each of their sections and add them to Classroom Console, creating new users when necessary.' %> |
  <%= link_to 'Create Canvas Courses', create_canvas_courses_path, class: 'slow', data: { toggle: 'tooltip'}, title: 'For all courses where sync=true, create matching courses and sections in Canvas.' %>

  <% if ENV['DEMO'] %>
    <br>
    <br>
    <%= link_to 'Generate Sample Data', generate_sample_data_path %>
  <% end %>
</div><br>
