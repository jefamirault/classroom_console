<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :sis_id, 'SIS ID' %>
    <%= form.number_field :sis_id %>
  </div>

  <div class="field">
    <%= form.label :course_id, 'Course ID' %>
    <%= form.number_field :course_id %>
  </div>

  <div class="field">
    <%= form.label :canvas_id, 'Canvas ID' %>
    <%= form.number_field :canvas_id %>
  </div>

  <div class="field">
    <%= form.label :canvas_course_id %>
    <%= form.number_field :canvas_course_id %>
  </div>

  <div class="field">
    <%= form.label :term_id %>
    <%= form.number_field :term_id %>
  </div>

  <div class="field">
    <%= form.label :sync_grades %>
    <%= form.check_box :sync_grades %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
